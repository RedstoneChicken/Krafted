//bridge-file-version: #43
{
	"format_version": "1.16.200",
	"minecraft:block": {
		"description": {
			"identifier": "korbon:spike_trap_base",
			"properties": {
				"korbon:spiked": [
					true,
					false
				]
			}
		},
		"components": {
			"minecraft:destroy_time": 1,
			"minecraft:explosion_resistance": 1,
			"minecraft:material_instances": {
				"*": {
					"texture": "spike_trap_base",
					"render_method": "opaque"
				}
			},
			"minecraft:geometry": "geometry.spike_trap",
			"minecraft:on_step_on": {
				"event": "korbon:spike",
				"target": "self"
			},
			"minecraft:unwalkable": true
		},
		"events": {
			"korbon:spike": {
				"set_block_property": {
					"korbon:spiked": true
				},
				"run_command": {
					"command": [
						"playsound tile.piston.in @a[r=3]"
					]
				}
			},
			"korbon:unspike": {
				"set_block_property": {
					"korbon:spiked": false
				},
				"damage": {
					"type": "temperature",
					"amount": 30,
					"target": "self"
				},
				"run_command": {
					"command": [
						"playsound tile.piston.out @a[r=3]"
					]
				}
			}
		},
		"permutations": [
			{
				"condition": "query.block_property('korbon:spiked') == true",
				"components": {
					"minecraft:on_step_on": {
						"event": "korbon:unspike",
						"target": "self"
					},
					"minecraft:geometry": "geometry.spike_trap"
				}
			},
			{
				"condition": "query.block_property('korbon:spiked') == false",
				"components": {
					"minecraft:on_step_off": {
						"event": "korbon:spike",
						"target": "self"
					},
					"minecraft:geometry": "geometry.spike_trap_spiked"
				}
			}
		]
	}
}