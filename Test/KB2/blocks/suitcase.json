{
    "format_version": "1.16.100",
    "minecraft:block": {
        "description": {
            "identifier": "honkit26113:suitcase",
            "properties": {
                "honkit26113:direction": [0, 1],
                "honkit26113:trader_spawned": [0, 1]
            }
        },
        "components": {
            "minecraft:creative_category": {
                "group": "itemGroup.name.items",
                "category": "items"
            },
            "minecraft:geometry": "geometry.suitcase",
           	"minecraft:material_instances": {
                "*": {
                    "texture": "suitcase",
                    "render_method": "alpha_test"
                }
            },
            "minecraft:placement_filter": {
                "conditions": [
                    {
                        "allowed_faces": [ "up" ]
                    }
                ]
            },
            "minecraft:on_player_placing": {
                "event": "honkit26113:on_placed"
            },
            "minecraft:on_interact": {
                "event": "honkit26113:spawn_trader"
            },
            "minecraft:destroy_time": 0.5,
            "minecraft:explosion_resistance": 6,
            "minecraft:block_light_absorption": 0,
            "minecraft:flammable": {
                "flame_odds": 20,
                "burn_odds": 20
            },
            "minecraft:pick_collision": {
                "origin": [-6, 0, -4],
                "size": [12, 6, 8]
            },
            "minecraft:entity_collision": {
                "origin": [-6, 0, -4],
                "size": [12, 6, 8]
            }
        },
        "events": {
        	"honkit26113:on_placed": {
                "set_block_property": {
                	"honkit26113:direction": "math.floor((query.cardinal_facing_2d) / 4)"
                }
            },
            "honkit26113:spawn_trader": {
                "sequence": [
                    {
                        "run_command": {
                            "command": "titleraw @a[r=10] actionbar {\"rawtext\":[{\"translate\":\"suitcase.message.interact_with_emerald\"}]}"
                        }
                    },
                    {
                        "condition": "q.get_equipped_item_name('main_hand') == 'emerald'",
                        "decrement_stack": {}
                    },
                    {
                        "condition": "q.get_equipped_item_name('main_hand') == 'emerald'",
                        "run_command": {
                            "command": [
                                "summon honkit26113:lost_explorer ~ ~1 ~",
                                "titleraw @a[r=10] actionbar {\"rawtext\":[{\"translate\":\"suitcase.message.summoned\"}]}"
                            ]
                        }
                    },
                    {
                        "condition": "q.block_property('honkit26113:direction') == 0 && q.get_equipped_item_name('main_hand') == 'emerald'",
                        "set_block": {
                            "block_type": "honkit26113:suitcase_used"
                        }
                    },
                    {
                        "condition": "q.block_property('honkit26113:direction') == 1 && q.get_equipped_item_name('main_hand') == 'emerald'",
                        "run_command": {
                            "command": "structure load mystructure:suitcase_used_rotated_270 ~ ~ ~"
                        }
                    }
                ]
            }
        },
        "permutations": [
        	{
                "condition": "query.block_property('honkit26113:direction') == 0",
                "components": {
                    "minecraft:rotation": [0, 0, 0]
                }
            },
        	{
                "condition": "query.block_property('honkit26113:direction') == 1",
                "components": {
                    "minecraft:rotation": [0, 270, 0]
                }
            }
        ]
    }
}